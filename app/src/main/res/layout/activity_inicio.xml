<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Inicio">

    <TextView
        android:id="@+id/txtTacosMike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="TACOS MIKE"
        android:textAlignment="center"
        android:textSize="60dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/btnNuevaOrden"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintVertical_chainStyle="packed"/>

    <Button
        android:id="@+id/btnNuevaOrden"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="NUEVA ORDEN"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTacosMike"
        app:layout_constraintBottom_toTopOf="@id/btnRegistrarVenta"
        android:layout_marginTop="80dp"
        />

    <Button
        android:id="@+id/btnRegistrarVenta"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="REGISTRAR VENTA"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnNuevaOrden"
        app:layout_constraintBottom_toTopOf="@id/btnAdministrarMenu"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnAdministrarMenu"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="ADMINISTRAR MENU"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/btnRegistrarVenta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnEditarOrden"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/btnEditarOrden"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="EDITAR ORDEN"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/btnAdministrarMenu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnReporteVentas"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/btnReporteVentas"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="REPORTE VENTAS"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/btnEditarOrden"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>